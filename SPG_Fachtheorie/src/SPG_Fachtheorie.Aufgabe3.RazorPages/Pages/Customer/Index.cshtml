@page
@model SPG_Fachtheorie.Aufgabe3.RazorPages.Pages.Customer.IndexModel
@{
    <h1>Customer Index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Company Name</th>
                <th>Advertisements</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.FirstName</td>
                    <td>@customer.LastName</td>
                    <td>@customer.CompanyName</td>
                    <td>
                        @foreach (var advertisement in customer.Advertisements)
                        {
                            @if (advertisement.Length >= 5000)
                            {
                                <a href="/Advertisement/Detail/@advertisement.Id">@advertisement.Id - @advertisement.ProductName</a>

                                <br />
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Advertisement/Create">Add Advertisement</a>
}
